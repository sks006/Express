<%-include('../../partials/head.ejs') %>

    <div class="container">

        <div class="col-my-6 offset-md-3">
            <div class="card card-body">
                <h4 my-3>Create A New Accont</h4>
                <form action="/auth/signup" method="post">

                    <div class="from-group">
                        <label for="username">
                            Enter Your UserName (MUST BE UNIQ)
                        </label>
                        <input type="text" name="username" id="username" class="form-control <%= error.username ? 'is-invalid':" "  %>">
                        <div class="invalid-feedback">
                            <%=error.username && error.username %>
                        </div>
                    </div>


                    <div class="from-group">
                        <label for="email">
                            Enter Your Valid Email(REQUIRED)
                        </label>
                        <input type="email" name="email" id="email" class="form-control <%= error.email ? 'is-invalid':" "  %>">
                        <div class="invalid-feedback">
                            <%=error.email && error.email %>
                        </div>
                    </div>


                    <div class="from-group">
                        <label for="password">
                            Enter strong password (MUST BE UNIQ)
                        </label>
                        <input type="password" name="password" id="password" class="form-control <%= error.password ? 'is-invalid':" "  %>">
                        <div class="invalid-feedback">
                            <%=error.password && error.password %>
                        </div>
                    </div>


                    <div class="from-group">
                        <label for="confirmPasword">
                            confirmPasword
                        </label>
                        <input type="pasword" name="confirmPasword" id="confirmPasword" class="form-control <%= error.confirmPassword ? 'is-invalid':" "  %>">
                        <div class="invalid-feedback">
                            <%=error.confirmPassword && error.confirmPassword %>
                        </div>
                    </div>

                    <input type="submit" value="singUp" class="btn btn-primary">

                </form>
                <a href="/auth/signup" class="my-3 text-center">Don't Have any Acount? Creat One.</a>
            </div>
        </div>

    </div>
    <%-include("../../partials/footer.ejs") %>





        </body>

        </html>